<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/fondo_principal">

    <!-- Menú lateral estático -->
    <LinearLayout
        android:id="@+id/menuLateral"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/navy_blue_light"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <!-- Botón Perfil -->
        <TextView
            android:id="@+id/btnPerfil"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_button_square"
            android:drawableTop="@drawable/ic_menu_profile"
            android:gravity="center"
            android:text="Perfil"
            android:textColor="@color/gray_dark"
            android:textSize="10sp"
            android:paddingTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"/>

        <!-- Botón Fotos -->
        <TextView
            android:id="@+id/btnFotos"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_button_square"
            android:drawableTop="@drawable/ic_menu_photo"
            android:gravity="center"
            android:text="Fotos"
            android:textColor="@color/gray_dark"
            android:textSize="10sp"
            android:paddingTop="4dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Botón Video -->
        <TextView
            android:id="@+id/btnVideo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_button_square"
            android:drawableTop="@drawable/ic_menu_video"
            android:gravity="center"
            android:text="Video"
            android:textColor="@color/gray_dark"
            android:textSize="10sp"
            android:paddingTop="4dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Botón Web -->
        <TextView
            android:id="@+id/btnWeb"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_button_square"
            android:drawableTop="@drawable/ic_menu_web"
            android:gravity="center"
            android:text="Web"
            android:textColor="@color/gray_dark"
            android:textSize="10sp"
            android:paddingTop="4dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Botón Contacto -->
        <TextView
            android:id="@+id/btnBotones"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_button_square"
            android:drawableTop="@drawable/ic_menu_button"
            android:gravity="center"
            android:text="Botones"
            android:textColor="@color/gray_dark"
            android:textSize="10sp"
            android:paddingTop="4dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

    <!-- Contenedor de Fragmentos -->
    <FrameLayout
        android:id="@+id/contenedorFragmentos"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/fondo_claro"/>
</LinearLayout>
